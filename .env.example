# Flask Configuration
FLASK_APP=app
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production

# Database Configuration
# For MySQL (Production)
DATABASE_URL=mysql+mysqlconnector://root:password@localhost:3306/KitchenSyncDB

# For SQLite (Development/Testing)
# DATABASE_URL=sqlite:///kitchensync.db

# Database connection settings
DB_HOST=localhost
DB_PORT=3306
DB_NAME=KitchenSyncDB
DB_USER=root
DB_PASSWORD=

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-minimum-32-characters-long
JWT_ACCESS_TOKEN_EXPIRES=900          # 15 minutes in seconds
JWT_REFRESH_TOKEN_EXPIRES=604800      # 7 days in seconds

# API Configuration
API_TITLE=KitchenSync API
API_VERSION=1.0
API_DESCRIPTION=Kitchen inventory management API

# CORS Configuration (optional)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/kitchensync.log
